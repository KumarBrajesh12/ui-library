{
  "compilerOptions": {
    "target": "ES5", // Compatible with most environments
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // Allow TypeScript to emit output (needed for declaration files)
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // This is the updated JSX setting that works well with React 17+
    "declaration": true, // Generate .d.ts files for your library
    "emitDeclarationOnly": true, // Only emit type declarations
    "outDir": "dist/types", // Output directory for declaration files
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ]
}
